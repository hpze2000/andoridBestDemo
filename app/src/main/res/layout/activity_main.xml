<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e2e2e2"
    android:padding="10dp">


    <org.apmem.tools.layouts.FlowLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:text="列表示例 (带上拉刷新，下拉刷新)"
            android:id="@+id/btn_demo_list"
            android:background="#ffff773e"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:text="图片瀑布流（图片加载/缓存组件的使用）"
            android:id="@+id/btn_demo_meizitu_list"
            android:background="#ffff0abe"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:text="登录演示"
            android:id="@+id/btn_demo_login"
            android:background="#ff1b89ff"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:text="上传文件演示"
            android:id="@+id/btn_demo_upload"
            android:background="#ffffbd09"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:text="下载文件演示"
            android:id="@+id/btn_demo_download"
            android:background="#ffa400ff"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginRight="@dimen/space_5"/>
    </org.apmem.tools.layouts.FlowLayout>

</LinearLayout>